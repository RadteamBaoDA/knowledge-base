{
  "name": "knowledge-base-backend",
  "version": "1.0.0",
  "description": "Backend proxy for RAGFlow AI Chat and AI Search with Langfuse logging",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "vitest",
    "db:migrate": "tsx src/db/migrate.ts"
  },
  "keywords": [
    "ragflow",
    "langfuse",
    "proxy",
    "ai-chat"
  ],
  "license": "MIT",
  "dependencies": {
    "connect-redis": "^9.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "express-session": "^1.18.0",
    "helmet": "^7.1.0",
    "http-proxy-middleware": "^3.0.2",
    "langfuse": "^3.27.0",
    "pg": "^8.13.1",
    "redis": "^5.10.0",
    "uuid": "^10.0.0",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/node": "^22.9.0",
    "@types/pg": "^8.11.10",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "eslint": "^9.14.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.5"
  }
}
